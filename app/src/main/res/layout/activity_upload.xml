<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".UploadActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

 <androidx.core.widget.NestedScrollView
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/green_border"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bungee"
                android:text="Upload Food"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/uploadImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/uploading"
                app:civ_border_color="@color/greenBtn"
                app:civ_border_width="2dp"/>

            <EditText
                android:id="@+id/foodName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_border"
                android:gravity="start|center_vertical"
                android:hint="Food Name"
                android:padding="16dp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/calorie"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_border"
                android:gravity="start|center_vertical"
                android:hint="Calorie"
                android:inputType="number"
                android:padding="16dp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/totalFat"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_border"
                android:gravity="start|center_vertical"
                android:hint="Total Fat"
                android:inputType="number"
                android:padding="16dp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/cholesterol"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_border"
                android:gravity="start|center_vertical"
                android:hint="Cholesterol"
                android:inputType="number"
                android:padding="16dp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/sodium"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_border"
                android:gravity="start|center_vertical"
                android:hint="Sodium"
                android:inputType="number"
                android:padding="16dp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/carbo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_border"
                android:gravity="start|center_vertical"
                android:hint="Total Carbohydrate"
                android:inputType="number"
                android:padding="16dp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/totalSugar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_border"
                android:gravity="start|center_vertical"
                android:hint="Total Sugar"
                android:inputType="number"
                android:padding="16dp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/protein"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_border"
                android:gravity="start|center_vertical"
                android:hint="Protein"
                android:inputType="number"
                android:padding="16dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/bungee"
                android:text="Health Condition"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/green_border"
                android:orientation="vertical"
                android:padding="20dp">

                <CheckBox
                    android:id="@+id/diabetes"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="5dp"
                    android:text="Diabetes" />

                <CheckBox
                    android:id="@+id/gastrointestinal"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="5dp"
                    android:text="Pulmonary Disease" />

                <CheckBox
                    android:id="@+id/bowel"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="5dp"
                    android:text="Allergies" />

                <CheckBox
                    android:id="@+id/highBlood"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="5dp"
                    android:text="High Blood Pressure" />

                <CheckBox
                    android:id="@+id/weight"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="5dp"
                    android:text="Weight Management" />

                <CheckBox
                    android:id="@+id/anemia"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="5dp"
                    android:text="Anemia" />

                <CheckBox
                    android:id="@+id/highCholesterol"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="5dp"
                    android:text="High Cholesterol" />

                <CheckBox
                    android:id="@+id/heartDisease"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="5dp"
                    android:text="Heart Disease" />

                <CheckBox
                    android:id="@+id/osteoporosis"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="5dp"
                    android:text="Osteoporosis" />

                <CheckBox
                    android:id="@+id/celiac"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="5dp"
                    android:text="Digestive disorders" />

                <CheckBox
                    android:id="@+id/renal"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="5dp"
                    android:text="Renal Disease" />

                <CheckBox
                    android:id="@+id/hypothyroidism"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="5dp"
                    android:text="Thyroid disorders" />

                <CheckBox
                    android:id="@+id/obesity"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="5dp"
                    android:text="obesity" />

                <CheckBox
                    android:id="@+id/Arthritis"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="5dp"
                    android:text="Arthritis" />

                <CheckBox
                    android:id="@+id/Mental_health"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="5dp"
                    android:text="Mental health" />

                <CheckBox
                    android:id="@+id/gastroes"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="5dp"
                    android:text="Gastroesophageal Rellux Disease" />

                <CheckBox
                    android:id="@+id/Autoimmune"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="5dp"
                    android:text="Autoimmune Diseases" />


            </LinearLayout>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bungee"
            android:text="Mood"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/green_border"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/happy"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:padding="5dp"
                        android:text="Happy" />

                    <CheckBox
                        android:id="@+id/sad"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:padding="5dp"
                        android:text="Sad" />

                    <CheckBox
                        android:id="@+id/excited"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:padding="5dp"
                        android:text="Excited" />
                </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                        <CheckBox
                            android:id="@+id/angry"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:padding="5dp"
                            android:text="Angry" />

                        <CheckBox
                            android:id="@+id/stress"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:padding="5dp"
                            android:text="Stress" />

                        <CheckBox
                            android:id="@+id/nostalgia"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:padding="5dp"
                            android:text="Nostalgia" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/inLove"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:padding="5dp"
                        android:text="In Love" />

                    <CheckBox
                        android:id="@+id/calm"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:padding="5dp"
                        android:text="Calm" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/bungee"
                android:text="Description"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_border"
                android:gravity="start|center_vertical"
                android:hint="Enter description"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:maxLines="1000"
                android:padding="16dp"
                android:textColor="@color/black"/>


            <Button
                android:id="@+id/uploadBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/black"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="20dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>
 </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/activity_header3"
        app:menu="@menu/admin_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>